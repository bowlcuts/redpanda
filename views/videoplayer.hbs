
    <div class="video-home">
        <video id="videoPlayer" width="70%" height="80%" controls muted="muted" autoplay>
        <source src="{{image}}" type="video/mp4">
        </video>
    </div>

    <div class="video-home-bottom-section">
     
        <div class="video-home-details">
       <div class="ownerAndAvatar"
            <a href="#">
            <img src="http://unsplash.it/250/150?gravity=center" alt="" class="channel-icon">
            </a>           
            <a href="#" class="video-channel-name">{{owner.userName}}</a>    
            </div>
            <a href="/video-player/{{_id}}" class="video-title">{{title}}</a>
            {{!-- <a href="#" class="video-channel-name">{{owner.userName}}</a> --}}
            <div class="video-metadata">
                {{!-- <span>12K views</span>
                â€¢ --}}
                <span>{{date}}</span>
            </div>
        </div>
        <div class="description">
           
                <h5>Description</h5>
           
                <p>{{description}}</p>
            </div>
        </div>

    


    <div class="comment-box">
        <form class="comments" action="{{_id}}/add-reviews" method="post">
            <label for="comment">Comment</label>
            <input type="text" name="comment" id="comment">
            <button type="submit">Post</button>
        </form>
    </div>
    
    <div class="comments-section">
        {{#each reviews}}
        <div>
            
            <p>{{comment}}</p>
        </div>
        
        {{/each}}
    </div>